<Window x:Class="IceSpeedway.AddResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IceSpeedway"
        mc:Ignorable="d"
        Title="AddResultWindow" Height="600" Width="800" MinWidth="800" MinHeight="600">
    <Grid Height="600" Width="800">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="412" Height="580">
            <Label Content="Добавить результат" FontSize="26" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="Фамилия" FontSize="14"/>
            <TextBox x:Name="LastNameBox" FontSize="14" Margin="0,0,0,10"/>
            <TextBlock Text="Имя" FontSize="14"/>
            <TextBox x:Name="FirstNameBox" FontSize="14" Margin="0,0,0,10"/>
            <TextBlock Text="Отчество" FontSize="14"/>
            <TextBox x:Name="PatronymicBox" FontSize="14" Margin="0,0,0,10"/>
            <TextBlock Text="Город" FontSize="14"/>
            <TextBox x:Name="CityBox" FontSize="14" Margin="0,0,0,10"/>
            <TextBlock Text="Тур 1" FontSize="14"/>
            <ComboBox x:Name="Tour1Box" SelectedIndex="0" Margin="0,0,0,10">
                <ComboBoxItem Content="0"/>
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
            </ComboBox>
            <TextBlock Text="Тур 2" FontSize="14"/>
            <ComboBox x:Name="Tour2Box" SelectedIndex="0" Margin="0,0,0,10">
                <ComboBoxItem Content="0"/>
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
            </ComboBox>
            <TextBlock Text="Тур 3" FontSize="14"/>
            <ComboBox x:Name="Tour3Box" SelectedIndex="0" Margin="0,0,0,10">
                <ComboBoxItem Content="0"/>
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
            </ComboBox>
            <TextBlock Text="Тур 4" FontSize="14"/>
            <ComboBox x:Name="Tour4Box" SelectedIndex="0" Margin="0,0,0,10">
                <ComboBoxItem Content="0"/>
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
            </ComboBox>
            <TextBlock Text="Тур 5" FontSize="14"/>
            <ComboBox x:Name="Tour5Box" SelectedIndex="0" Margin="0,0,0,10">
                <ComboBoxItem Content="0"/>
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
            </ComboBox>
            <Button Content="Сохранить" Height="29" FontSize="16" Background="#3399FF" Foreground="White" BorderBrush="#3399FF" Click="SaveButton_Click" Width="95" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>

