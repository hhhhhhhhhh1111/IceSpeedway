<Window x:Class="IceSpeedway.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IceSpeedway"
        mc:Ignorable="d"
        Title="LoginWindow" Height="600" Width="800" MinWidth="800" MinHeight="600">
    <Grid Height="600" Width="800">
        <Image Height="148" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="278,30,0,0" Source="/logo.jpg"/>
        <Label Content="Добро пожаловать!" Margin="278,178,240,0" VerticalAlignment="Top" FontSize="30" Width="282" Height="49" RenderTransformOrigin="0.482,0.156"/>
        <Label Content="Логин" Margin="254,249,480,0" VerticalAlignment="Top" FontSize="20" Width="65" Height="36"/>
        <TextBox x:Name="textBox" VerticalAlignment="Top" FontSize="14"  Margin="254,297,220,0" Height="30" BorderThickness="0,0,0,1" TextChanged="TextBox_TextChanged"/>
        <TextBlock x:Name="watermark" Text="Введите почту" VerticalAlignment="Top" Foreground="Gray" IsHitTestVisible="False" Margin="256,296,220,0" Height="24"/>
        <Label Content="Пароль" Margin="254,351,468,0" VerticalAlignment="Top" FontSize="20" Width="78" Height="36"/>
        <TextBox x:Name="textBox1" VerticalAlignment="Top" FontSize="14"  Margin="254,390,220,0" Height="30" BorderThickness="0,0,0,1" TextChanged="TextBox_TextChanged1"/>
        <TextBlock x:Name="watermark1" Text="Введите пароль" VerticalAlignment="Top" Foreground="Gray" IsHitTestVisible="False" Margin="256,390,220,0" Height="25"/>
        <Button Margin="256,503,222,57" Background="#3399FF" BorderBrush="#3399FF" Foreground="White" Content="Регистрация" Height="40" FontSize="20" Click="Button_Click"/>
        <Button Margin="256,444,222,116" Background="#3399FF" BorderBrush="#3399FF" Foreground="White" Content="Войти" Height="40" FontSize="20" Click="Button_Click_1"/>
    </Grid>
</Window>
